<Window x:Class="GameOfLife.Windows.NotificationWindows.FileError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife.Windows.NotificationWindows"
        mc:Ignorable="d"
        Title="FileError" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding Source=ErrorMessage}">
        </TextBlock>
        <Button Name="CloseButton" Grid.Row="1" Width="60" Height="20">
            Close
        </Button>
    </Grid>
</Window>
