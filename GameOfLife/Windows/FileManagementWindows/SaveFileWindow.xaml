<Window x:Class="GameOfLife.Windows.FileManagementWindows.SaveFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife.Windows.FileManagementWindows"
        mc:Ignorable="d"
        Title="SaveFile" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Width="400" Height="100">
            <Label DockPanel.Dock="Top" Content="Enter File Name Below" BorderBrush="Black" BorderThickness="1">
            </Label>
            <TextBox Name="FileName" Grid.Row="0" Width="400" Height="40">
            </TextBox>
        </DockPanel>


        <Button Name="SubmitButton" Grid.Row="1" Click="Submit" Width="400" Height="40" Content="Save Ruleset">
        </Button>
        
    </Grid>
</Window>
