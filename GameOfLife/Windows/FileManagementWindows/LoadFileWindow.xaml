<Window x:Class="GameOfLife.Windows.FileManagementWindows.LoadFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife.Windows.FileManagementWindows"
        mc:Ignorable="d"
        Title="LoadFile" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <ListBox Name="Files" Grid.Row="0" SelectionChanged="NewSelectedItem">
        </ListBox>

        <Button Name="Select" Grid.Row="1" Click="Submitted" Width="400" Height="40">
            Load Ruleset
        </Button>
    </Grid>
</Window>
