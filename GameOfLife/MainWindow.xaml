<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="888" Width="816"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="Height" Value="47"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="146"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="409*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <Button Name="AdvanceButton" Click="AdvanceStep">
                Advance Step
            </Button>
            <Button Name="ReverseButton" Click="ReverseStep">
                Reverse Step
            </Button>
            <Button Name="PlayButton">
                Play (DISABLED)
            </Button>
            <Button Name="StopButton">
                Stop (DISABLED)
            </Button>
            <Button Name="Setup" Click="OpenSetupMenu">
                Setup
            </Button>
        </Menu>

        <Canvas Grid.Row="1" Height="Auto" Width="Auto" Name="LifeBoard" MouseMove="CanvasMouseMovement" MouseLeftButtonUp="CanvasCellClicked">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
