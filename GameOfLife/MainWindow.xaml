<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Game of Life" Height="888" Width="816"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="LightBlue"/>
        </Style>
        <Style TargetType="Menu">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="LightBlue"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="146"/>
            <Setter Property="Background" Value="LightGreen"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="753*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <Button Name="AdvanceButton" Click="AdvanceStep" MouseLeave="ButtonLeave">
                Advance Step
            </Button>
            <Button Name="ReverseButton" Click="ReverseStep" MouseLeave="ButtonLeave">
                Reverse Step
            </Button>
            <Button Name="PlayButton" Click="Play" MouseLeave="ButtonLeave">
                Play
            </Button>
            <Button Name="StopButton" Click="Stop" MouseLeave="ButtonLeave">
                Stop
            </Button>
            <Button Name="Setup" Click="OpenSetupMenu">
                Setup
            </Button>
        </Menu>

        <Canvas Name="LifeBoard" Width="700" Height="700"
                MouseMove="CanvasMouseMovement" MouseLeave="CanvasMouseLeftItem" MouseLeftButtonUp="CanvasCellClicked"
                MouseEnter="CanvasMouseMovement" Margin="0,50,116,20">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>

        <ToolBar Grid.Row="2" Margin="0,16,0,0">
            <Slider Name="SpeedSlider" IsSnapToTickEnabled="True" Value="1000" Minimum="200" Maximum="5000" TickFrequency="400" TickPlacement="Both" Width="140"
                    ValueChanged="ChangeTimerSpeed">
            </Slider>
            <TextBlock Text="{Binding Path=Value, ElementName=SpeedSlider}" VerticalAlignment="Center">
                
            </TextBlock>
        </ToolBar>

    </Grid>
</Window>
